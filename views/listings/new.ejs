<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
    <h2>Create a New Listing</h2>
            <br>   
    <form action="/listings"  method="post">
        <div class="mb-3">
            <label for="title" class="form-lable" >Title </label>
            <input  name="listing[title]"
             placeholder="Add a catchy Title" 
             class="form-control" 
             type="text"
             required>
        </div>
        <div class="mb-3">
            <label for="Description" class="form-lable" >Description </label>
            <textarea type="text"  name="listing[description]"  class="form-control"  required></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-lable">Image Link </label>
            <input type="text"   class="form-control"  name="listing[image]" placeholder="Enter image Url/link">
        </div>
    <div class="row">
        <div class="mb-md-3 col-4"  >
            <label for="price" class="form-lable" >Price </label>
            <input  name="listing[price]" class="form-control" placeholder="1200" type="number" required>
        </div>
        <div class="mb-3 col-md-8 " > 
            <label for="country" class="form-lable" >Country </label>
            <input type="text" class="form-control" name="listing[country]" placeholder="Enter country" required>
           </div>
        </div>
       <div class="mb-3">
        <label for="location" class="form-lable" >Location </label>
        <input type="text" class="form-control" name="listing[location]" placeholder="Jaipur , Rajasthan" required>
       </div>
       
        
        <br><br>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br><br>
    </form>
        </div>
    </div>
</body>
