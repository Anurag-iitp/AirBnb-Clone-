<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
    <h2>Create a New Listing</h2>
            <br>   
    <form action="/listings"  method="post">
        <div class="mb-3">
            <lable for="title" class="form-lable" >Title </lable>
            <input  name="listing[title]"
             placeholder="Add a catchy Title" 
             class="form-control" 
             type="text"
             required>
        </div>
        <div class="mb-3">
            <lable for="Description" class="form-lable" >Description </lable>
            <textarea type="text"  name="listing[description]"  class="form-control"  required></textarea>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-lable">Image Link </lable>
            <input type="text"   class="form-control"  name="listing[image]" placeholder="Enter image Url/link">
        </div>
    <div class="row">
        <div class="mb-3 col-md-4"  >
            <lable for="price" class="form-lable" >Price </lable>
            <input  name="listing[price]" class="form-control" placeholder="1200" type="number" required>
        </div>
        <div class="mb-3 col-md-8 " > 
            <lable for="country" class="form-lable" >Country </lable>
            <input type="text" class="form-control" name="listing[country]" placeholder="Enter country" required>
           </div>
        </div>
       <div class="mb-3">
        <lable for="location" class="form-lable" >Location </lable>
        <input type="text" class="form-control" name="listing[location]" placeholder="Jaipur , Rajasthan" required>
       </div>
       
        
        <br><br>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br><br>
    </form>
        </div>
    </div>
</body>
