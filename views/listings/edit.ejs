<% layout("layouts/boilerplate") %>
<body>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Edit your Listing</h2>
    <form  method="post" action="/listings/<%=listing._id%>?_method=PUT">
       <div class="mb-3">
        <label for="title" class="form-lable">Title </label>
        <input  name="listing[title]" value="<%=listing.title%>" class="form-control">
       </div>
       <br>
       <div class="mb-3">
        <label for="description" class="form-lable">Description </label>
        <textarea type="text"  name="listing[description]"  class="form-control"><%=listing.description%></textarea>
       </div> 
        <br>
        <div class="mb-3">
            <label for="image" class="form-lable">Image Link </label>
            <input type="text"  name="listing[image]" 
        value="<%=listing.image%>" class="form-control">
           </div> 
        <br>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price </label>
            <input  name="listing[price]"
            value="<%=listing.price%>" type="number" class="form-control">
           </div> 
        <br>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-lable">Country </label>
            <input type="text"  name="listing[country]" 
            value="<%=listing.country%>" class="form-control">
           </div>
        </div> 
        <br>
        <div class="mb-3">
            <label for="location" class="form-lable">Location </label>
            <input type="text"  name="listing[location]"
            value="<%=listing.location%>" class="form-control">
           </div> 
        <br><br>
        <button class="btn btn-dark edit-btn mt-3" >Edit</button>
<br><br>
    </form>
</div>
</div>
</body>

